/* pages/order/index.wxss */

page {
  background-color: #e4edf7;
}

.tabv {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  box-shadow: 9px 0px 16px rgba(84, 179, 240, 0.17);
  background-color: #fff;
}

.tabitemhv {
  color: #06c;
  border-bottom: 5rpx solid #06c;
}

.tabitemv {
  color: #999;
}

/*订单记录部分*/

.orderv {
  margin: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  padding-bottom: 25rpx;
  background-color: #fff;
}

.ordertopv {
  display: flex;
  justify-content: space-between;
  padding: 21rpx;
  font-size: 26rpx;
}

.orderstatus {
  color: #f33;
}

.ordergoodsv {
  background: #f6f4f4;
}

.goodsv {
  display: flex;
  margin: 0 20rpx;
}

.goodstu {
  width: 170rpx;
  height: 170rpx;
  margin: 30rpx 10rpx;
}

.goodsinfov {
  margin-top: 36rpx;
  margin-left: 17rpx;
}

.goodsname {
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goodsattr {
  color: #999;
  font-size: 24rpx;
  margin: 16rpx 0;
}

.goodsnumv {
  margin-top: 17rpx;
  display: flex;
}

.goodsjifenv {
  font-size: 30rpx;
  color: #f33;
}

.buynumtxt {
  margin-left: 63rpx;
  color: #999;
  font-size: 30rpx;
}

.pricev {
  text-align: right;
  margin-right: 30rpx;
  font-size: 26rpx;
  margin-top: 30rpx;
}

/*操作按钮部分*/

.orderoptv {
  border-top: 1rpx solid #e5e5e5;
  text-align: right;
  margin-top: 20rpx;
  padding-bottom:90rpx;
}

.huibtn {
  width: 200rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(229, 229, 229, 1);
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #999;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 18rpx;
}

.huangbtn{  
  width: 200rpx;
  height: 80rpx;
  background: #FFCC41;
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 0rpx;
}

.lanbtn{  
  width: 200rpx;
  height: 80rpx;
  background: #12BCF8;
  border-radius: 40rpx;
  float: right;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  margin: 18rpx 22rpx 22rpx 0rpx;
}